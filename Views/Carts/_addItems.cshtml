@model ShoppingList.Models.Item

@{ 
    string addUrl = String.Format("Carts/{0}/Items", Model.CartID);
}

<h4>Add new item</h4>
<div class="row">
    <div class="col-md-4">
        <form action="Items" method="post" class="form-inline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label mb-2"></label>
                    <input asp-for="Name" class="form-control mx-sm-3  mb-2" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                <label asp-for="Quantity" class="control-label mb-2"></label>
                    <input asp-for="Quantity" class="form-control mx-sm-3 mb-2" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                    <label class="form-check-label mb-2">
                        <input class="form-check-input mb-2" asp-for="Done" /> @Html.DisplayNameFor(model => model.Done)
                    </label>
                    <input type="submit" value="Add" class="btn btn-primary mx-sm-3 mb-2" />
                </div>
        </form>
    </div>
</div>

